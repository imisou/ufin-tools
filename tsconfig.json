{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": ".",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["./src"],
  "exclude": ["jest", "**/**/*.spec.ts"]
}
