{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./libs",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./types",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "jest"]
  },
  "include": ["./src"],
  "exclude": ["build", "node_modules" , "jest", "**/**/*.spec.ts"]
}
