{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./libs",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./types",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "jest"]
  },
  "include": ["./src"],
  "exclude": [
    "build",
    "jest",
    "src/setupTests.ts",
    "**/**/*.spec.ts"
  ]
}
